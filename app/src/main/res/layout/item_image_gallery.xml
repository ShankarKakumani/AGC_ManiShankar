<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="pro.crazydude.binaryveda.helper.model.GalleryImages" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        >
        <ImageView
            android:id="@+id/imageView_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/gallery_image"
            android:scaleType="fitXY"
            app:drawableResource="@{model.imageOne}"
            tools:src="@drawable/image_one" />

        <ImageView
            android:id="@+id/imageView_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/gallery_image"
            android:scaleType="fitXY"
            app:drawableResource="@{model.imageTwo}"
            tools:src="@drawable/image_two" />
    </LinearLayout>

</layout>
